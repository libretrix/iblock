{
    "name": "libretrix/iblock",
    "description": "PHP library for working with information blocks following Clean Architecture principles",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "deptrac/deptrac": "^4.2",
        "friendsofphp/php-cs-fixer": "^3.90",
        "phpunit/phpunit": "^12.4"
    },
    "autoload": {
        "psr-4": {
            "Libretrix\\Iblock\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Libretrix\\Iblock\\Tests\\": "tests/"
        }
    }
}
